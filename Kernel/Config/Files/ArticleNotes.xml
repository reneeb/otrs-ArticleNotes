<?xml version="1.0" encoding="utf-8" ?>
<otrs_config version="1.0" init="Config">
    <ConfigItem Name="Frontend::Output::FilterElementPost###ArticleNotes" Required="0" Valid="1">
        <Description Translatable="1">Add a link in the article menu to change the article note.</Description>
        <Group>ArticleNotes</Group>
        <SubGroup>OutputFilter</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::FilterElementPost::ArticleNotes</Item>
                <Item Key="Templates">
                    <Hash>
                        <Item Key="AgentTicketZoom">1</Item>
                    </Hash>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Output::FilterContent###ArticleNotesIcons" Required="0" Valid="1">
        <Description Translatable="1">Add a link in the article menu to articles with notes.</Description>
        <Group>ArticleNotes</Group>
        <SubGroup>OutputFilter</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::FilterContent::ArticleNotesIcons</Item>
                <Item Key="Templates">
                    <Hash>
                        <Item Key="AgentTicketZoom">1</Item>
                    </Hash>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Module###AgentArticleNote" Required="0" Valid="1">
        <Description Translatable="1">Frontend module registration for the agent interface.</Description>
        <Group>ArticleNotes</Group>
        <SubGroup>Frontend::Agent::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Description>Change Article Note</Description>
                <Title>Change Article Note</Title>
                <NavBarName>Ticket</NavBarName>
                <Loader>
                    <JavaScript>Core.Agent.TicketAction.js</JavaScript>
                </Loader>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ArticleNotes::Field" Required="0" Valid="1">
        <Description Translatable="1">Define which dynamic field stores the note.</Description>
        <Group>ArticleNotes</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="">ArticleNote</String>
        </Setting>
    </ConfigItem>
</otrs_config>
